.posts-wrapper.row
    .post
        .post-head
            .name
                Brian McAuley
            .image.center-block
                =link_to (image_tag @post.image.url(:medium), class:'img-responsive'), post_path(@post)
            %p.caption
                =@post.caption
            .text-center
            =link_to "Edit post", edit_post_path(@post)
            =link_to "Cancel", posts_path

